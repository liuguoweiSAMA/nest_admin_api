// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int      @id @default(autoincrement()) @db.UnsignedInt
  name      String   @unique
  password  String
  role      String?
  createdAt DateTime @default(now())
  words     Word[]
}

model recommend {
  id  Int    @id @default(autoincrement()) @db.UnsignedInt
  url String
  img String
}

model videoList {
  id   Int    @id @default(autoincrement()) @db.UnsignedInt
  type String
  url  String
}

model workspace {
  id                Int      @id @default(autoincrement()) @db.UnsignedInt
  // 素材列表
  materials         String
  // 选择主播
  anchor            String
  // 屏幕方向
  screenOrientation Int
  //游戏类型
  getGameType       Int
  // 创作方向
  creationType      Int
  //具体要求
  content           String
  //用户上传的id
  uid               Int
  createdAt         DateTime @default(now())
  updateAt          DateTime @updatedAt
}

model Word {
  id   Int   @id @default(autoincrement()) @db.UnsignedInt
  user user? @relation(fields: [userId], references: [id], onDelete: Cascade)

  title    String
  content  String
  wordType String

  userId    Int      @db.UnsignedInt
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
}
